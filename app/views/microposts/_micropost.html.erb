<li id="micropost-<%= micropost.id %>">
  <span class="user"><%= link_to "by #{micropost.user.name}", micropost.user %>
    <%= micropost.content %>
  </span>
  <span class="content">
    <p>
    <%= link_to image_tag(micropost.picture.url, :size =>'480x320'), micropost_path(micropost)  %>
  </span>
  <p>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) | admin_user?(current_user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <%= render "likes/like_form", micropost: micropost %>
</li>
