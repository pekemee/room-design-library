<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to image_tag(@user.image.url, :size =>'100x100'), @user  %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' if current_user?(@user) %>
    </section>
  </aside>


<div class="col-md-8">
  <h3>Commented posts (<%= @user.commented_posts.count %>)</h3>
  <% if @user.commented_posts.any? %>
  <ul class="inline-block-post jscroll">
    <%= render @microposts %>
    <%= paginate @microposts %>
  </ul>
  <% end %>
</div>
